[user]
	name = Mike
	email = ezuratechan@gmail.com
[alias]
    a = add 
	co = checkout
	ci = commit
	st = status
	b = branch
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	head = !git l -1
	h = !git head
	r = !git l -20
	ra = !git r --all
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
    
   	ds = diff --state=160,120
	dh1 = diff HEAD~1
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
    dump = cat-file -p

    pom = push origin master
    pod = push origin dev
    po2d = push origin2 dev

    noff = merge --no-ff
    div = divergence
    gn = goodness
    gnc = goodness --cached
    fa = fetch --all
    br = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1

    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all
    r = !git l -30
    ra = !git r --all

[merge]
	tool = vimdiff

[core]
    editor = /usr/bin/vim

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan


